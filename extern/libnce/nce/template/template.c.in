#include <assert.h>
#include <stdio.h>
#include <stdlib.h>
@watcher-includes@

#include <ev.h>

#include "@watcher@.h"

static void
nce_@watcher@_cb(EV_P_ struct ev_@watcher@ *self, int revents)
{
	struct nce_@watcher@ *ev = NCE_@WATCHER@(self, @watcher@);

	if (revents & (@WATCHER_EVENTS@)) {
#if !defined(NDEBUG)
		/*
		 * Make sure user fetched events through the nce_@watcher@_wait
		 * function in the meantime.
		 */
		if (ev->revents) {
			fprintf(stderr, "abort: pending events not cleared\n");
			abort();
		}
#endif
		ev->revents = revents;
	}
}

static void
nce_@watcher@_coro_entry_cb(EV_P_ struct nce_coro *self)
{
	struct nce_@watcher@_coro *evco = NCE_CONTAINER_OF(self, struct nce_@watcher@_coro, coro);

	evco->entry(EV_A_ &evco->@watcher@);
}

static void
nce_@watcher@_coro_finalizer_cb(EV_P_ struct nce_coro *self)
{
	struct nce_@watcher@_coro *evco = NCE_CONTAINER_OF(self, struct nce_@watcher@_coro, coro);

	/* Stop the watcher for convenience. */
	nce_@watcher@_stop(EV_A_ &evco->@watcher@);
@watcher-coro-finalizer@

	/* Call user as very last function. */
	if (evco->finalizer)
		evco->finalizer(EV_A_ &evco->@watcher@);
}

void
nce_@watcher@_start(EV_P_ struct nce_@watcher@ *ev)
{
	assert(ev);

	if (ev->@watcher@.active)
		return;

	ev_init(&ev->@watcher@, nce_@watcher@_cb);
@watcher-start@
@user-start@
	ev_@watcher@_start(EV_A_ &ev->@watcher@);
}

int
nce_@watcher@_active(const struct nce_@watcher@ *ev)
{
	assert(ev);

	return ev->@watcher@.active;
}

void
nce_@watcher@_feed(EV_P_ struct nce_@watcher@ *ev, int events)
{
	assert(ev);

	ev_feed_event(EV_A_ &ev->@watcher@, events);
}

void
nce_@watcher@_stop(EV_P_ struct nce_@watcher@ *ev)
{
	assert(ev);

	ev->revents = 0;
@watcher-stop@
@user-stop@
	ev_@watcher@_stop(EV_A_ &ev->@watcher@);
}

int
nce_@watcher@_ready(struct nce_@watcher@ *ev)
{
	assert(ev);

	int rc = 0;

	if (ev->revents & (@WATCHER_EVENTS@)) {
		rc = ev->revents;
		ev->revents = 0;
	}

	return rc;
}

int
nce_@watcher@_wait(EV_P_ struct nce_@watcher@ *ev)
{
	assert(ev);

	int rc = 0;

	while (!(rc = nce_@watcher@_ready(ev)))
		nce_coro_yield();

	return rc;
}
@watcher-funcs@
@user-funcs@
int
nce_@watcher@_coro_spawn(EV_P_ struct nce_@watcher@_coro *evco, const struct nce_@watcher@_coro_args *args)
{
	assert(evco);
	assert(evco->entry);

	(void)args;

	int rc;

	evco->coro.entry = nce_@watcher@_coro_entry_cb;

	if (!evco->coro.finalizer)
		evco->coro.finalizer = nce_@watcher@_coro_finalizer_cb;

	/*
	 * Watchers should be executed before attached coroutines to allow
	 * resuming them if an event happened.
	 */
	ev_set_priority(&evco->@watcher@.@watcher@, NCE_PRI_MAX - 1);
@watcher-coro-spawn@
@user-coro-spawn@
	/* Automatically start the watcher unless disabled. */
	if (!(evco->coro.flags & NCE_CORO_INACTIVE))
		nce_@watcher@_start(EV_A_ &evco->@watcher@);

	if ((rc = nce_coro_create(EV_A_ &evco->coro)) < 0)
		nce_@watcher@_stop(EV_A_ &evco->@watcher@);
	else
		nce_coro_resume(&evco->coro);

	return rc;
}

void
nce_@watcher@_coro_destroy(struct nce_@watcher@_coro *evco)
{
	assert(evco);

	/* Will call nce_@watcher@_coro_finalizer_cb */
	nce_coro_destroy(&evco->coro);
}

#include <assert.h>
#include <stdio.h>
#include <stdlib.h>
@watcher-includes@

#include <ev.h>

#include "c@watcher@.h"

static void
c@watcher@_cb(EV_P_ struct ev_@watcher@ *self, int revents)
{
	struct c@watcher@ *ev = C@WATCHER@(self, @watcher@);

	if (revents & (@WATCHER_EVENTS@)) {
#if !defined(NDEBUG)
		/*
		 * Make sure user fetched events through the c@watcher@_wait
		 * function in the meantime.
		 */
		if (ev->revents) {
			fprintf(stderr, "abort: pending events not cleared\n");
			abort();
		}
#endif
		ev->revents = revents;
	}
}

static void
c@watcher@_coro_entry_cb(EV_P_ struct coro *self)
{
	struct c@watcher@_coro *evco = CORO_CONTAINER_OF(self, struct c@watcher@_coro, coro);

	evco->entry(EV_A_ &evco->@watcher@);
}

static void
c@watcher@_coro_finalizer_cb(EV_P_ struct coro *self)
{
	struct c@watcher@_coro *evco = CORO_CONTAINER_OF(self, struct c@watcher@_coro, coro);

	/* Stop the watcher for convenience. */
	c@watcher@_stop(EV_A_ &evco->@watcher@);
@watcher-coro-finalizer@
	c@watcher@_finish(&evco->@watcher@);

	/* Call user as very last function. */
	if (evco->finalizer)
		evco->finalizer(EV_A_ &evco->@watcher@);
}

void
c@watcher@_init(struct c@watcher@ *ev)
{
	assert(ev);

	ev->revents = 0;
	ev->@watcher@ = (const struct ev_@watcher@) {};
	ev_init(&ev->@watcher@, c@watcher@_cb);
@watcher-init@
@user-init@
}

void
c@watcher@_start(EV_P_ struct c@watcher@ *ev)
{
	assert(ev);

	ev_@watcher@_start(EV_A_ &ev->@watcher@);
}

int
c@watcher@_active(const struct c@watcher@ *ev)
{
	assert(ev);

	return ev->@watcher@.active;
}

void
c@watcher@_feed(EV_P_ struct c@watcher@ *ev, int events)
{
	assert(ev);

	ev_feed_event(EV_A_ &ev->@watcher@, events);
}

void
c@watcher@_stop(EV_P_ struct c@watcher@ *ev)
{
	assert(ev);

	ev_@watcher@_stop(EV_A_ &ev->@watcher@);
}

int
c@watcher@_ready(struct c@watcher@ *ev)
{
	assert(ev);

	int rc = 0;

	if (ev->revents & (@WATCHER_EVENTS@)) {
		rc = ev->revents;
		ev->revents = 0;
	}

	return rc;
}

int
c@watcher@_wait(EV_P_ struct c@watcher@ *ev)
{
	assert(ev);

	int rc = 0;

	while (!(rc = c@watcher@_ready(ev)))
		coro_yield();

	return rc;
}
@watcher-funcs@
@user-funcs@
void
c@watcher@_finish(struct c@watcher@ *ev)
{
	assert(ev);
	assert(ev->@watcher@.active == 0);

	ev->revents = 0;
@watcher-finish@
@user-finish@
}

void
c@watcher@_coro_init(struct c@watcher@_coro *evco)
{
	assert(evco);

	c@watcher@_init(&evco->@watcher@);

	coro_init(&evco->coro);
	coro_set_entry(&evco->coro, c@watcher@_coro_entry_cb);
	coro_set_finalizer(&evco->coro, c@watcher@_coro_finalizer_cb);

	evco->entry = NULL;
	evco->finalizer = NULL;
@watcher-coro-init@
}

int
c@watcher@_coro_spawn(EV_P_ struct c@watcher@_coro *evco, const struct c@watcher@_coro_def *def)
{
	assert(evco);
	assert(def);
	assert(def->entry);

	int rc;

	c@watcher@_coro_init(evco);

	evco->entry = def->entry;
	evco->finalizer = def->finalizer;

	/*
	 * Watchers should be executed before attached coroutines to allow
	 * resuming them if an event happened.
	 */
	ev_set_priority(&evco->@watcher@.@watcher@, CORO_PRI_MAX - 1);
@watcher-coro-spawn@
@user-coro-spawn@

	/* Automatically start the watcher unless disabled. */
	if (!(def->flags & CORO_INACTIVE))
		c@watcher@_start(EV_A_ &evco->@watcher@);

	/* All other fields are available for customization. */
	coro_set_name(&evco->coro, def->name);
	coro_set_stack_size(&evco->coro, def->stack_size);
	coro_set_flags(&evco->coro, def->flags);

	if ((rc = coro_create(EV_A_ &evco->coro)) < 0)
		c@watcher@_stop(EV_A_ &evco->@watcher@);
	else
		coro_resume(&evco->coro);

	return rc;
}

void
c@watcher@_coro_finish(struct c@watcher@_coro *evco)
{
	assert(evco);

	/* Will call c@watcher@_coro_finalizer_cb */
	coro_finish(&evco->coro);
}


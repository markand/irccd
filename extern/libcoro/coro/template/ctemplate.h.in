#ifndef LIBCORO_C@WATCHER@_H
#define LIBCORO_C@WATCHER@_H

/**
 * \file coro/c@watcher@.h
 * \brief Coroutine watcher support for ev_@watcher@.
 * \ingroup libcoro-ev-watchers
 */

#include <stddef.h>

#include <ev.h>

#include "coro.h"

#if defined(DOXYGEN)
#define EV_P_ struct ev_loop *,
#endif

/**
 * \brief Convenient ::CORO_CONTAINER_OF macro for ::c@watcher@.
 */
#define C@WATCHER@(Ptr, Field) \
	(CORO_CONTAINER_OF(Ptr, struct c@watcher@, Field))

struct c@watcher@;
struct c@watcher@_coro;
struct c@watcher@_coro_def;

/**
 * \brief Coroutine entrypoint for @watcher@.
 *
 * Similar to ::coro_entry_t but it receives its watcher as argument.
 */
typedef void (*c@watcher@_coro_entry_t)(EV_P_ struct c@watcher@ *self);

/**
 * \brief Finalizer function.
 *
 * Similar to ::coro_finalizer_t but let the user perform extra step on a
 * coroutine watcher.
 */
typedef void (*c@watcher@_coro_finalizer_t)(EV_P_ struct c@watcher@ *self);
@watcher-types@
@user-types@
/**
 * \struct c@watcher@
 * \brief Event watcher for ev_@watcher@.
 */
struct c@watcher@ {
	/**
	 * Underlying ev_@watcher@.
	 */
	struct ev_@watcher@ @watcher@;

	/**
	 * (read-only)
	 *
	 * Events received from the libev callback.
	 */
	int revents;
@watcher-fields@
@user-fields@
};

/**
 * \struct c@watcher@_coro
 * \brief Convenient coroutine coupled with a @watcher@.
 */
struct c@watcher@_coro {
	/**
	 * Underlying watcher to use.
	 */
	struct c@watcher@ @watcher@;

	/**
	 * Underlying coroutine.
	 */
	struct coro coro;

	/**
	 * (private)
	 */
	c@watcher@_coro_entry_t entry;

	/**
	 * (private)
	 */
	c@watcher@_coro_finalizer_t finalizer;
@watcher-coro-fields@
};

/**
 * \struct c@watcher@_coro_def
 * \brief Watcher coroutine definition.
 *
 * This structure is used as a descriptor for ::c@watcher@_coro_spawn.
 */
struct c@watcher@_coro_def {
	/**
	 * \copydoc ::coro_def::name.
	 */
	const char *name;

	/**
	 * \copydoc ::coro_def::stack_size.
	 */
	size_t stack_size;

	/**
	 * \copydoc ::coro_def::flags.
	 */
	unsigned int flags;

	/**
	 * Watcher coroutine entrypoint.
	 */
	c@watcher@_coro_entry_t entry;

	/**
	 * (optional)
	 *
	 * Coroutine finalizer.
	 *
	 * This user function is called after the coroutine watcher has been
	 * cleanup itself.
	 */
	c@watcher@_coro_finalizer_t finalizer;
@watcher-coro-def-fields@
@user-coro-def-fields@
};

/**
 * Initialize defaults.
 *
 * This function is not required if you directly use ::c@watcher@_use or
 * ::c@watcher@_create but is provided if you wish to call ::c@watcher@_finish
 * prematurly.
 */
void
c@watcher@_init(struct c@watcher@ *ev);

/**
 * Start the event watcher.
 *
 * This function is the `ev_@watcher@_start` equivalent, it does nothing
 * regarding the internal coroutine.
 *
 * Caller must have a coroutine calling c@watcher@_wait indefinitely until the
 * watcher is stopped.
 *
 * No-op if the watcher is already active
 */
void
c@watcher@_start(EV_P_ struct c@watcher@ *ev);

/**
 * Indicate if the watcher is active.
 *
 * \return non-zero if the watcher was started
 * \sa ::c@watcher@_start
 */
int
c@watcher@_active(const struct c@watcher@ *ev);

/**
 * Feed an event to the watcher.
 *
 * It is equivalent to ev_feed_event.
 */
void
c@watcher@_feed(EV_P_ struct c@watcher@ *ev, int events);

/**
 * Stop the event watcher.
 *
 * This function is the `ev_@watcher@_sttop` equivalent, it does nothing
 * regarding the internal coroutine.
 *
 * No-op if the watcher is already inactive.
 */
void
c@watcher@_stop(EV_P_ struct c@watcher@ *ev);

/**
 * Return internal watcher events.
 *
 * If events have been received, they are removed from the watcher and returned,
 * otherwise 0 is returned.
 *
 * It is useful if you plan to use multiple watchers in the same coroutine and
 * check them individually as long as you never forget to check them all.
 *
 * This function returns immediately.
 *
 * \return the current events or 0 if none
 */
int
c@watcher@_ready(struct c@watcher@ *ev);

/**
 * Yield calling coroutine until watcher becomes ready.
 *
 * The returned value is identical to the `revents` argument that you would
 * receive in the normal libev usage.
 *
 * If the watcher is already ready the function returns immediately and the
 * internal state is cleared.
 *
 * Because libev's event loop only applies an event flag inside the watcher user
 * is responsible of resuming its own coroutines including the one that is
 * actually blocking on ::c@watcher@_wait. Resuming a coroutine that is waiting
 * on ::c@watcher@_wait while the watcher isn't ready nor started won't return
 * and will yield again until condition is met.
 *
 * It is perfectly safe to call this function even if the watcher is stopped.
 *
 * This function **yields**.
 *
 * \return the watcher revents
 */
int
c@watcher@_wait(EV_P_ struct c@watcher@ *ev);
@watcher-funcs@
@user-funcs@
/**
 * Cleanup internal resources.
 *
 * \pre watcher must be stopped
 */
void
c@watcher@_finish(struct c@watcher@ *ev);

/**
 * Initialize watcher and its coroutine.
 *
 * This is equivalent to calling ::c@watcher@_init followed by ::coro_init.
 */
void
c@watcher@_coro_init(struct c@watcher@_coro *evco);

/**
 * This all in one function initialize, set and optionnally start the watcher
 * and immediately creates its dedicated coroutine which is also started
 * automatically.
 *
 * \pre def != NULL
 * \param def the coroutine and watcher description
 * \return same as ::coro_create
 */
int
c@watcher@_coro_spawn(EV_P_ struct c@watcher@_coro *evco, const struct c@watcher@_coro_def *def);

/**
 * Stop the internal watcher and destroy it along with its dedicated coroutine.
 *
 * Do not call this function within a ::c@watcher@_coro_def::finalizer callback.
 */
void
c@watcher@_coro_finish(struct c@watcher@_coro *evco);

#endif /* !LIBCORO_C@WATCHER@_H */

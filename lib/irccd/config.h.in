#ifndef IRCCD_CONFIG_H
#define IRCCD_CONFIG_H

/**
 * \brief Irccd major version number.
 */
#define IRCCD_VERSION_MAJOR @MAJOR@

/**
 * \brief Irccd minor version number.
 */
#define IRCCD_VERSION_MINOR @MINOR@

/**
 * \brief Irccd patch version number.
 */
#define IRCCD_VERSION_PATCH @PATCH@

/**
 * \brief Irccd version as a string.
 */
#define IRCCD_VERSION "@MAJOR@.@MINOR@.@PATCH@"

/**
 * \brief Default system-wide location for cache files.
 */
#define IRCCD_CACHEDIR "@VARDIR@/cache/irccd"

/**
 * \brief Default system-wide location for configuration files.
 */
#define IRCCD_SYSCONFDIR "@ETCDIR@"

/**
 * \brief Default system-wide location for plugins.
 */
#define IRCCD_LIBDIR "@LIBDIR@"

/**
 * \brief Default system-wide location for additional data files.
 */
#define IRCCD_DATADIR "@SHAREDIR@/irccd"

/**
 * \brief Set to 1 if HTTP is enabled, 0 otherwise
 */
#define HTTP @HTTP@

/**
 * \brief Set to 1 if Javascript is enabled, 0 otherwise
 */
#define JS @JS@

/**
 * \brief Set to 1 if OpenSSL is enabled, 0 otherwise
 */
#define SSL @SSL@

#endif /* !IRCCD_CONFIG_H */
